@model CapstoneProjectToDoApplication.Models.ToDoList

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="ToDoTasks" class="btn btn-dark" asp-action="GetTasks" asp-route-id="@Model?.Id">Active Tasks</a> 
    <a asp-controller="ToDoTasks" class="btn btn-success" asp-action="CompletedTasks" asp-route-id="@Model?.Id">Completed Tasks</a>
    <a class="btn btn-secondary" asp-action="Index">Back to Lists</a>
</div>
<center><img src="~/css/picture1.jpg" /></center>